<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main__math_probs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mehakmeet.mathsurvival.Main_Math_probs"
    android:background="@drawable/wall_main">


    <TextView
        android:text="3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="43sp"
        android:textColor="@android:color/black"
        android:id="@+id/option3"
        android:background="@android:color/holo_red_light"
        android:tag="3"
        android:textSize="30sp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="clicked"
        android:layout_alignBaseline="@+id/option4"
        android:layout_alignBottom="@+id/option4"
        android:layout_toStartOf="@+id/option2" />


    <TextView
        android:text="Correct!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:id="@+id/RightOrWrong"
        android:textSize="32sp"
        android:alpha="0"
        android:textColor="@android:color/holo_green_light"/>

    <TextView
        android:text="1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="43sp"
        android:textColor="@android:color/black"
        android:id="@+id/option1"
        android:background="@android:color/holo_blue_bright"
        android:tag="1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="clicked"
        android:layout_above="@+id/option3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <TextView
        android:text="4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="43sp"
        android:id="@+id/option4"
        android:textColor="@android:color/black"
        android:background="@android:color/holo_orange_light"
        android:tag="4"
        android:textSize="30sp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="clicked"
        android:layout_above="@+id/RightOrWrong"
        android:layout_toEndOf="@+id/option3"
        android:layout_marginBottom="23dp" />

    <TextView
        android:text="2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="43sp"
        android:textColor="@android:color/black"
        android:id="@+id/option2"
        android:background="@android:color/holo_blue_dark"
        android:tag="2"
        android:textSize="30sp"
        android:textAlignment="center"
        android:clickable="true"
        android:onClick="clicked"
        android:layout_above="@+id/option4"
        android:layout_toEndOf="@+id/option1" />

    <TextView
        android:text="1 + 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:id="@+id/problem"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_above="@+id/option1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <TextView
        android:text="30s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_bright"
        android:id="@+id/timer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="0/0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_bright"
        android:id="@+id/score"
        android:layout_alignBaseline="@+id/timer"
        android:layout_alignBottom="@+id/timer"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
